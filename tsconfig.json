{
	"compilerOptions": {
		"experimentalDecorators": true,
		"lib": ["ES2022"],
		"target": "ES2022",
		"module": "commonjs",
		"esModuleInterop": true,
		"outDir": "./dist",
		"strict": true,
		"sourceMap": true,
		"incremental": true,
		"skipLibCheck": true,
		"useUnknownInCatchVariables": false,
		"resolveJsonModule": true,
		"emitDecoratorMetadata": true,
		"strictPropertyInitialization": false
	},
	"include": ["./src"]
}
